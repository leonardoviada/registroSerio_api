<h4>Nuovo Alunno</h4>
<form class="form d-flex" action="/alunno" method="POST">
  <input class="form-control mr-3" type="text" name="nome" placeholder="Nome" />
  <input
    class="form-control mr-3"
    type="text"
    name="cognome"
    placeholder="Cognome"
  />
  <input
    class="form-control mr-2"
    type="email"
    name="mail"
    placeholder="E-Mail"
  />
  <select class="form-control mr-2" name="_id_classe">
    <option selected>1</option>
    <option selected>2</option>
    <option selected>3</option>
    <option selected>4</option>
    <option selected>5</option>
  </select>
  <button class="btn btn-primary btn-sm">Carica</button>
</form>
